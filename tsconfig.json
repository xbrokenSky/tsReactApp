{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "isolatedModules": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "jsx": "react",
        "allowJs": true,
        "checkJs": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}